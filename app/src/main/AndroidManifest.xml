<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/frog"
        android:label="がんばれ廉太郎"
        android:roundIcon="@mipmap/frog_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GambareRentaro"
        tools:targetApi="31">
        <activity
            android:name=".MultiplayerActivity"
            android:exported="false"
            android:label="@string/title_activity_multiplayer"
            android:theme="@style/Theme.GambareRentaro" />
        <activity
            android:name=".AwsActivity"
            android:exported="false"
            android:label="@string/title_activity_aws"
            android:theme="@style/Theme.GambareRentaro" />
        <activity
            android:name=".ScoreActivity"
            android:exported="false"
            android:label="@string/title_activity_score"
            android:theme="@style/Theme.GambareRentaro" />
        <activity
            android:name=".MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:label="@string/title_activity_result"
            android:theme="@style/Theme.GambareRentaro" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>